<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragment.googleFit.VitalFragment">

    <TextView
        android:id="@+id/vitalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/vital_title"
        android:fontFamily="@font/aclonica"
        android:textSize="@dimen/_14sdp" />
    <ImageView
        android:id="@+id/graphImageView"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/graph_icon"
        android:layout_toEndOf="@+id/vitalTitle"
        android:contentDescription="@string/app_name"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/vitalReRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vitalTitle"
        />
</RelativeLayout>