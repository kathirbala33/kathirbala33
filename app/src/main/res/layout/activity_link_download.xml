<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KTSamples.LinkDownloadActivity">

    <EditText
        android:id="@+id/linkEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="haiiiiiiiiiiiiiiiiiiiiiiiiiii"
        app:layout_constraintTop_toBottomOf="@+id/linkEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="2dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="#50cf11"
        android:visibility="gone"
        android:textSize="@dimen/_10sdp"
        app:autoSizeMaxTextSize="@dimen/_10sdp"
        app:autoSizeMinTextSize="@dimen/_8sdp"
        app:autoSizeTextType="uniform"
        />

    <Button
        android:id="@+id/download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text"
        android:text="Link"/>
</androidx.constraintlayout.widget.ConstraintLayout>